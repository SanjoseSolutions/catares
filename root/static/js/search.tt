$(document).ready(function() {
  $('#search_form input.target').change(function() {
    var target = this.value;
    $.get("[% c.uri_for('/search/fields') %]", {
      building: $('#building').val(),
      target: target
    }, function(data) {
      $('#search-fields').html(data);
      $('#search_form').attr('action', "[% c.uri_for('/') %]"
        + target.toLowerCase() + "/search");
      if ('Hall' == target) {
	$('#hall-date').datepicker ({
	  	dateFormat: "yy-mm-dd",
		showOn: "button",
	      	buttonImage: "/static/images/cal4.jpg",
	      	buttonImageOnly: true,
	      	buttonText: "Select date"
	} );
        /*Calendar.setup( {
            inputField      :       "hall-date",
            ifFormat        :       "%Y-%m-%d",
            button          :       "dtPicker",
            align           :       "Bl",
            singleClick     :       true
        } );*/
      } else {
	$('#checkin-date').datepicker ({
		dateFormat: "yy-mm-dd",
		showOn: "button",
	      	buttonImage: "/static/images/cal4.jpg",
	      	buttonImageOnly: true,
	      	buttonText: "Select date"
	} );
	$('#checkout-date').datepicker ({
		dateFormat: "yy-mm-dd",
		showOn: "button",
	      	buttonImage: "/static/images/cal4.jpg",
	      	buttonImageOnly: true,
	      	buttonText: "Select date"
	} );
       /*Calendar.setup( {
            inputField      :       "checkin-date",
            button          :       "dtCheckinPicker",
            ifFormat        :       "%Y-%m-%d",
            align           :       "Bl",
            singleClick     :       true
        } );
        Calendar.setup( {
            inputField      :       "checkout-date",
            button          :       "dtCheckoutPicker",
            ifFormat        :       "%Y-%m-%d",
            align           :       "Bl",
            singleClick     :       true
        } );*/
        $('select.checkin_t').change(function() {
          var hh = $('#checkin_hh').val();
          var mm = $('#checkin_mm').val();
          if (hh && mm) {
            var tm = hh + ':' + mm;
            $('#checkin_time').val(tm);
            $('#checkout_time').val(tm);
          }
        } );
      }
    } );
  } );
} );
